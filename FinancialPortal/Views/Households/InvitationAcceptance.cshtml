@model FinancialPortal.Models.InvitationAcceptanceViewModel
@{
    ViewBag.Title = "Welcome";
}
<div class="row">
    <div class="col-md-12">
        <div class="col-md-3"></div>
        <div class="well bs-component col-md-6">
            <fieldset>
                <legend>Invitation Accepted</legend>
                <div class="form-group">
                    <div class="col-md-12">
                        @if (Model.HasAccount)
                        {
                            <h5>Please sign in to access the household you just joined.</h5>
                        }
                        else
                        {
                            <h5>It appears you don't have an account.</h5>
                            <span>Please register a new account using the email address that your invitation was sent to (<i>@Model.InviteeEmailAddress</i>).</span>
                        }
                    </div>
                </div>
                </fieldset>  
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
