@model FinancialPortal.Models.InvitationViewModel
<div class="row">
    <div class="col-md-12">
        <div class="col-md-3"></div>
        <div class="well bs-component col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset>
                    <legend>Invite Someone to Join Your Household</legend>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input name="InviteeEmailAddress" type="text" class="form-control" placeholder="Email Address">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 modal-footer well-footer">
                            <button type="submit" class="btn btn-success">Send</button>
                            <a href="@Url.Action(ActionName.EDIT, ControllerName.HOUSEHOLDS, new { id = Model.Id })" class="btn btn-primary">Cancel</a>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
