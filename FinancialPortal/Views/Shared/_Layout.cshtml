<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FP | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Dependencies/dataTables/DataTablesCustom.css" rel="stylesheet" type="text/css" />
    <link href="~/fonts/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Dependencies/jQuery/jquery-2.2.4.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="color:darkgreen">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Financial Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Household", "Index", "Households")</li>
                        if (User.IsInRole(HouseholdRoleName.HEAD_OF_HOUSEHOLD))
                        {
                            <li>@Html.ActionLink("Transactions", "Index", "Transactions")</li>
                            <li>@Html.ActionLink("Bank Accounts", "Index", "BankAccounts")</li>
                            <li>@Html.ActionLink("Budget", "Index", "Budgets")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 55px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Financial Portal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
