@model IEnumerable<FinancialPortal.Models.Budget>
@using FinancialPortal.Helpers
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Budget Management";
}
@if (ViewBag.showCreateNew)
{
    <h2>@Html.ActionLink("Configure Your Budget", "Create")</h2>
}
else
{
    <h2>Your Budget</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimitMonthly)
            </th>
            <th>
                Options
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LimitMonthly)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}