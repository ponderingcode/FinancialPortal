@model IEnumerable<FinancialPortal.Models.BankAccount>
@using FinancialPortal.Helpers
@{
    ViewBag.Title = "Bank Accounts";
    ViewBag.AggregateBalance = ApplicationHelper.BankAccountsAggregateBalance;
}

<h2>Bank Accounts</h2>
<h4>Aggregate Balance: $@ViewBag.AggregateBalance</h4>
<p>
    @Html.ActionLink("Add Bank Account", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReconcileBalance)
        </th>
        <th>
            Options
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReconcileBalance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
